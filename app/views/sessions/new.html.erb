<h1 class="title">Inicio de sesión</h1>

<%= content_tag :div, class: 'content' do%>
  <%= content_tag :div, class: 'form-container' do%>
    <%= content_tag :div, class: 'offer-container' do%>
      <%= tag.span '¿Aun no tiene una cuenta?', class: 'signup-offer'%>
      <%= link_to 'Regístrese', signup_path, class: 'signup-link' %>
    <% end %>
    <%= form_with model: @user, url: login_path, local: true, class: 'new-user-form' do |f| %>
      <%= content_tag :div, class: 'input-group' do%>
        <%= f.label 'Nombre de usuario', class: 'form-label'%>
        <%= f.text_field :username, class: 'form-input'%>
      <% end %>
      <%= content_tag :div, class: 'input-group' do%>
        <%= f.label 'Password', class: 'form-label'%>
        <%= f.password_field :password, class: 'form-input'%>
      <% end %>
      <%= f.submit 'Crear', class: 'submit new-usr-btn', id: 'new_user_btn'%>
    <% end %>
  <% end %>
<% end %>

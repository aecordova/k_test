<h1 class="title">Nuevo Usuario</h1>


<%= content_tag :div, class: 'content' do%>
  <%= content_tag :div, class: 'form-container' do%>
    <%= form_with model: @user, url: signup_path, local: true, class: 'new-user-form' do |f| %>
      <%= content_tag :div, class: 'offer-container' do%>
        <%= tag.span '¿Ya tiene una cuenta?', class: 'login-offer'%>
        <%= link_to 'Inicie sesión', login_path, class: 'login-link' %>
      <% end %>
      <%= content_tag :div, class: 'input-group' do%>
        <%= f.label 'Nombre Completo', class: 'form-label'%>
        <%= f.text_field :name, class: 'form-input'%>
      <% end %>
      <%= content_tag :div, class: 'input-group' do%>
        <%= f.label 'Nombre de usuario (username)', class: 'form-label'%>
        <%= f.text_field :username, class: 'form-input'%>
      <% end %>
      <%= content_tag :div, class: 'input-group' do%>
        <%= f.label 'Email', class: 'form-label'%>
        <%= f.email_field :email, class: 'form-input'%>
      <% end %>
      <%= content_tag :div, class: 'input-group' do%>
        <%= f.label 'Password', class: 'form-label'%>
        <%= f.password_field :password, class: 'form-input'%>
      <% end %>
      <%= content_tag :div, class: 'input-group' do%>
        <%= f.label 'Confirmar Password', class: 'form-label'%>
        <%= f.password_field :password_confirmation, class: 'form-input'%>
      <% end %>
      <%= f.submit 'Crear', class: 'submit new-usr-btn', id: 'new_user_btn'%>
    <% end %>
  <% end %>
<% end %>

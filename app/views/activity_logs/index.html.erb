<h1>Log de Actividades</h1>

<div class="filter-form d-flex">
  <div class="filter-container">
    <div class="filter-group">
      <label for="baby-filter">Bebés</label>
      <input class="filter-input" id="baby-filter" list="baby-list" type="text" placeholder="Seleccione Bebe" />
      <datalist id="baby-list">
        <option>Baby Name</option>
      </datalist>
    </div>
    <div class="filter-group">
      <label for="assistant-filter">Asistentes</label>
      <input class="filter-input" id="assistant-filter" list="assistant-list" type="text" placeholder="Seleccione Asistente" />
      <datalist id="assistant-list">
        <option>Baby Name</option>
      </datalist>
    </div>
    <div class="filter-group">
      <label for="status-filter">Estatus</label>
      <input class="filter-input" id="status-filter" list="status-list" type="text" placeholder="Seleccione Estatus" />
      <datalist id="status-list">
        <option>Baby Name</option>
      </datalist>
    </div>
  </div>
 <div class="button-container">
   <button class="filter-submit" type="submit">Filtrar</button>   
 </div>
</div>
<div class="activity-list">
  <table class="table table-bordered">
  <thead class="table-head">
    <tr class = "table-header-row">
      <th class="table-header">Bebé</th>
      <th class="table-header">Asistente</th>
      <th class="table-header">Actividad</th>
      <th class="table-header">Inicio</th>
      <th class="table-header">Status</th>
      <th class="table-header">Duracion</th>
    </tr>
  </thead>
  <tbody class="table-body">
    <tr class="table-row">
      <td class="table-item">Mark</td>
      <td class="table-item">Otto</td>
      <td class="table-item">@mdo</td>
      <td class="table-item">@mdo</td>
      <td class="table-item">@mdo</td>
      <td class="table-item">@mdo</td>
    </tr>
  </tbody>
 </table> 
</div>
